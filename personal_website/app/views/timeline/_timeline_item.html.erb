<li class="<%= inverted %>">
  <div class="timeline-badge <%= badge_color %>">
    <i class="<%= badge_icon %>"></i>
  </div>

  <div class="timeline-panel">
    <div class="timeline-heading">
      <h4 class="timeline-title"> <%= title %> </h4>
      <p><small class="text-muted"><i class="<%= header_icon %>"></i><%= header_content %></small></p>
    </div>

    <div class="timeline-body">
  	  <%= body_content %>
    </div>
  </div>
</li>