<!DOCTYPE html>
<html>
  <head>
    <title>Personal Website</title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
  </head>

  <body>
    <header class="navbar navbar-inverse navbar-fixed-top">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to t('full_name'), root_url, class: "navbar-brand", id: "logo-name" %>
      <div id="navbar" class="collapse navbar-collapse navbar-right">
        <ul class="nav navbar-nav">
          <li><%= link_to t('views.layouts.application.welcome'), root_url %></li>
          <li><%= link_to t('views.layouts.application.bio'), {controller: "bio"} %></li>
          <li><%= link_to t('views.layouts.application.timeline'), {controller: "timeline"} %></li>
          <li><%= link_to t('views.layouts.application.recipes'), {controller: "recipes"} %></li>
        </ul>
      </div>
    </header>

  <%= yield %>

  <nav class="navbar navbar-inverse navbar-fixed-bottom">
    <div class="container">
      <%= render 'layouts/social' %>
    </div>
  </nav>
  </body>
</html>
